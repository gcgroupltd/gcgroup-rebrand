<style>
  .main-page {
    padding: 40px 15px;
  }

  .main-page h1 {
    font-size: 62px;
    line-height: 80px;
  }

  .main-page h2 {
    font-size: 29px;
  }

  .main-page h3 {
    font-size: 22px;
  }

  .main-page p,
  .main-page a.link {
    font-size: 18px;
    line-height: 1.5;
  }

  .main-page a.link {
    color: inherit;
    text-decoration: underline;
    margin-bottom: 15px;
    display: inline-block;
  }

  .main-page img {
    max-width: 100%;
  }
</style>

<section class="main-page">
  <div class="small-container">
    <h1>
      {{ page.metafields.custom.on_page_title | default: page.title | escape }}
    </h1>
    <div>
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
